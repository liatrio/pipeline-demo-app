<!DOCTYPE html>
<html>

<head>
	<title><%= welcomeSpec['appName'] %></title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href=<%="/#{welcomeSpec['appName']}/resources/css/main.css"%> />
</head>


<body>

    <!-- Wrapper -->
<div id="wrapper">

<!-- Header -->
<header id="header" class="alt">
	<a href="/" class="logo" style="color:#5A5A5A"><strong><%= welcomeSpec['companyName'] %></strong></a>
	<nav>
		<a href="#menu" style="color:#5A5A5A">Menu</a>
	</nav>
</header>

<!-- Menu -->
<nav id="menu">
	<ul class="links">
        <li><a href=<%= "/#{welcomeSpec['appName']}" %>>Home</a></li>
        <% welcomeSpec['articles'].each do |article| %>
            <li><a href=<%="/#{welcomeSpec['appName']}/resources/static/#{article['fileName']}"%> style="color:#5A5A5A"><%="#{article['name']}"%></a></li>
        <% end %>
	</ul>
	<ul class="actions vertical">
		<li><a href="#" class="button special fit">Sign Up</a></li>
		<li><a href="#" class="button fit">Log In</a></li>
	</ul>
</nav>

    <!-- Banner -->
    <section id="banner" class="major">
        <div class="inner">
            <header class="major">
                <h1><img src=<%= "/#{welcomeSpec['appName']}/resources/images/#{welcomeSpec['companyLogo']}" %> style="width: 30%;"/></h1>
            </header>
            <div class="content">
                <p style="text-transform: uppercase; color:#5A5A5A"> <%= welcomeSpec['companySlogan'] %></p>
                <ul class="actions">
                    <li><a href="#one" style="color:#5A5A5A" class="button next scrolly">Find out How</a></li>
                </ul>
            </div>
        </div>
    </section>

    <!-- Main -->
    <div id="main">

        <!-- One -->

        <section id="one" class="tiles">

        <% welcomeSpec['articles'].each do |article| %>
            <article>
                    <span class="image">
                            <img src=<%="/#{welcomeSpec['appName']}/resources/images/#{article['image']}" %> alt="" />
                    </span>
                    <header class="major">
                            <h3><a href= <%="/#{welcomeSpec['appName']}/resources/static/#{article['fileName']}" %> class="link"><%= article['name'] %></a></h3>
                            <p><%= article['description'] %></p>
                    </header>
            </article>
        <% end %>
</section>
        <!-- Two -->
        <section id="two">
            <div class="inner">
                <header class="major">
                    <h2>Become a customer</h2>
                </header>
                <p><%= welcomeSpec['testimonial'] %> </p>
                <ul class="actions">
                    <li><a href="landing.html" class="button next">Get Started</a></li>
                </ul>
            </div>
        </section>

    </div>

    <!-- Contact -->
<section id="thank" style="display: none;">
 <div class="inner">
     <center>
         <h3> Thank you for your feedback! </h3>
         <p>A customer service representative will be contacting you shortly regarding your email.</p>
     <center>
 </div>
</section>
<section id="contact">
	<div class="inner">
		<section>
      <center> <h2 style="color:#ACACAC"> Get in touch </h2> </center>
			<!--<form action="https:/formspree.io/youremailaddress@gmail.com" method="POST">-->
      <form action="#" method="POST" id="contactForm">
				<div class="field half first">
					<label for="name" style="color:#ACACAC">Name</label>
					<input type="text" name="name" id="name" required/>
				</div>
				<div class="field half">
					<label for="email" style="color:#ACACAC">Email</label>
					<input type="text" name="_replyto" id="email" required/>
				</div>
				<div class="field">
					<label for="message" style="color:#ACACAC">Message</label>
					<textarea name="message" id="message" rows="6" required></textarea>
				</div>
				<ul class="actions">
					<li><input type="submit" value="Send Message" class="special" style="color:#ACACAC" /></li>
					<li><input type="reset" value="Clear" style="color:#ACACAC" /></li>
				</ul>
			</form>
		</section>
		<section class="split">
			<section>
				<div class="contact-method">
					<span class="icon alt fa-envelope"></span>
					<h3 style="color:#ACACAC">Email</h3>
					<a href="#" style="color:#ACACAC">customerservice@devops.com</a>
				</div>
			</section>
			<section>
				<div class="contact-method">
					<span class="icon alt fa-phone"></span>
					<h3 style="color:#ACACAC">Phone</h3>
					<span style="color:#ACACAC">1-800-DEV-OPS</span>
				</div>
			</section>
			<section>
				<div class="contact-method">
					<span class="icon alt fa-home"></span>
					<h3 style="color:#ACACAC">Address</h3>
					<span style="color:#ACACAC">
					    1234 Cloud Ave<br />
					    Somewhere,
					    CA
					    1234<br />
					    United States of America
					</span>
				</div>
			</section>
		</section>
	</div>
</section>

<!-- Footer -->
	<footer id="footer">
		<div class="inner">
          <center>
    		<ul class="icons">
    		   <li><a href="https:/twitter.com/" class="icon alt fa-twitter" target="_blank" style="color:#ACACAC"><span class="label" style="color:#ACACAC">Twitter</span></a></li>
    		   <li><a href="https:/plus.google.com/" class="icon alt fa-google-plus" target="_blank" style="color:#ACACAC"><span class="label" style="color:#ACACAC">Google+</span></a></li>
    		   <li><a href="https:/instagram.com" class="icon alt fa-instagram" target="_blank" style="color:#ACACAC"><span class="label" style="color:#ACACAC">Instagram</span></a></li>
               <li><a href="https:/facebook.com" class="icon alt fa-facebook" target="_blank" style="color:#ACACAC"><span class="label" style="color:#ACACAC">Facebook</span></a></li>
    	    </ul>
          </center>
		</div>
	</footer>

</div>

<!-- Scripts -->
	<script src=<%="/#{welcomeSpec['appName']}/resources/js/jquery.min.js"%>></script>
	<script src=<%="/#{welcomeSpec['appName']}/resources/js/jquery.scrolly.min.js"%>></script>
	<script src=<%="/#{welcomeSpec['appName']}/resources/js/jquery.scrollex.min.js"%>></script>
	<script src=<%="/#{welcomeSpec['appName']}/resources/js/skel.min.js"%>></script>
	<script src=<%="/#{welcomeSpec['appName']}/resources/js/util.js"%>></script>
	<script src=<%="/#{welcomeSpec['appName']}/resources/js/main.js"%>></script>
    <script>
        $('form').submit(function (evt) {
           evt.preventDefault();
           var contactSection = document.getElementById("contact");
           $(contactSection).hide(600);
           var thankSection = document.getElementById("thank");
           $(thankSection).fadeIn(1100);
        });
    </script>

</body>

</html>
